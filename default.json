{
  "extends": ["config:recommended"],
  "semanticCommits": "enabled",
  "prConcurrentLimit": 5,
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "enabled": false,
    },
    {
      "matchDatasources": ["npm"],
      "minimumReleaseAge": "1 day"
    }
  ],
  "timezone": "CET",
  "schedule": [
    "* 0-4,22-23 * * 1-5",
    "* * * * 0,6"
  ]
}
